[flake8]
max-line-length = 120
exclude = .git,__pycache__,docs/source/conf.py,build,dist,.venv
ignore = E203, W503
# E203: whitespace before ':' (conflicts with Black)
# W503: line break before binary operator (conflicts with Black)
per-file-ignores =
    __init__.py: F401
    # F401: Module imported but unused